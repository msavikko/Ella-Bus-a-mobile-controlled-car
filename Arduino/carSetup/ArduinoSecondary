#include <LiquidCrystal.h>
LiquidCrystal lcd(12,11,5,4,3,2);
const int switchPin = 6;

byte smile[8] = {
  B00000,
  B10001,
  B00000,
  B00000,
  B10001,
  B01110,
  B00000,
};

byte heart[8] = 
              {
                0b00000,
                0b01010,
                0b11111,
                0b11111,
                0b11111,
                0b01110,
                0b00100,
                0b00000
              };

void setup() {
  // put your setup code here, to run once:
lcd.begin(16,2);
  lcd.createChar(1, heart);
  lcd.createChar(2, smile);
pinMode (switchPin, INPUT);

}

void loop() { 
  lcd.setCursor(0,0);
  lcd.print("Team ELLA");
  lcd.setCursor(0, 1);
  lcd.write(1);
  delay(500);
  lcd.write(2);
  delay(500);
  lcd.write(1);
  delay(500);
  lcd.write(2);
  delay(500);
  lcd.write(1);
  delay(500);
  lcd.write(2);
  delay(500);
  lcd.write(1);
  delay(500);
  lcd.write(2);
  delay(500);
  lcd.write(1);
  delay(500);
  lcd.write(2);
  delay(500);
  lcd.write(1);
  delay(500);
  lcd.write(2);
  delay(500);
  lcd.write(1);
  delay(500);
  lcd.write(2);
  delay(500);
  lcd.write(1);
  delay(500);
  lcd.write(2);
  delay (500);
  lcd.clear();
}
